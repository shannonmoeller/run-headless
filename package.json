{
  "name": "run-headless",
  "version": "2.0.1",
  "description": "The easiest way of running code in a modern headless browser environment.",
  "scripts": {
    "test": "nyc run-s test-*",
    "test-node": "tape test/index.js | tap-diff",
    "test-browser": "browserify test/index.js | bin/run-headless | tap-diff",
    "test-html": "bin/run-headless --html '<script>console.log(\"hello world\")</script>'",
    "test-url": "bin/run-headless --url 'https://google.com' --js 'console.log(document.title)'",
    "report": "nyc report -r text-lcov | coveralls",
    "pretest": "xo --fix",
    "precommit": "npm run test && git add .",
    "prepublishOnly": "run-s test build"
  },
  "keywords": [
    "browser",
    "chrome",
    "ci",
    "headless",
    "karma",
    "runner",
    "test"
  ],
  "author": "Shannon Moeller <me@shannonmoeller> (http://shannonmoeller.com)",
  "homepage": "https://github.com/shannonmoeller/run-headless#readme",
  "repository": "shannonmoeller/run-headless",
  "license": "MIT",
  "bin": {
    "run-headless": "bin/run-headless",
    "rh": "bin/run-headless"
  },
  "main": "index.js",
  "files": [
    "*.js",
    "bin"
  ],
  "dependencies": {
    "minimist": "^1.2.0",
    "puppeteer": "^1.0.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "blue-tape": "^1.0.0",
    "browserify": "^16.1.0",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "tap-diff": "^0.1.1",
    "tape": "^4.8.0",
    "xo": "^0.18.2"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "node_modules"
    ]
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ]
  },
  "engines": {
    "node": ">= 8",
    "npm": ">= 5"
  }
}
