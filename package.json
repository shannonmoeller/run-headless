{
  "name": "run-headless",
  "version": "1.0.0-5",
  "description": "The easiest way of running code in a modern headless browser environment.",
  "scripts": {
    "test": "run-s test-*",
    "test-node": "nyc tape test/index.js | tap-diff",
    "test-browser": "browserify test/index.js | bin/run-headless | tap-diff",
    "report": "nyc report -r text-lcov | coveralls",
    "pretest": "xo --fix",
    "precommit": "npm run test && git add .",
    "prepublishOnly": "git diff-index --quiet HEAD"
  },
  "keywords": [
    "headless",
    "test"
  ],
  "author": "Shannon Moeller <me@shannonmoeller> (http://shannonmoeller.com)",
  "homepage": "https://github.com/shannonmoeller/run-headless#readme",
  "repository": "shannonmoeller/run-headless",
  "license": "MIT",
  "bin": "bin/run-headless",
  "main": "index.js",
  "files": [
    "*.js",
    "bin"
  ],
  "dependencies": {
    "minimist": "^1.2.0",
    "puppeteer": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^15.2.0",
    "coveralls": "^3.0.0",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "tap-diff": "^0.1.1",
    "tape": "^4.8.0",
    "xo": "^0.18.2"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ]
  },
  "engines": {
    "node": ">= 8",
    "npm": ">= 5"
  }
}
